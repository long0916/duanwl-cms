<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
 <mapper namespace="com.duanwl.cms.dao.ChannelMapper">
 	<!-- 查询所有栏目 -->
 	<select id="selects" resultType="Channel">
 		select * from cms_channel
 	</select>
 	<!-- 根据栏目查询分类 -->
 	<select id="selectCategorysByChannelId" resultType="Category">
 		select * from cms_category where channel_id=#{channelId}
 	</select>
 </mapper>